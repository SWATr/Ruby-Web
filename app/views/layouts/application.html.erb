<!DOCTYPE html>
<html>
<head>
  <title>Accounting Services</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller.controller_name %>">
  <div id="banner">
    <%= image_tag("logo.png") %>
    <%= @page_title || "Accounting Services" %>
  </div>
  <div id="columns">
    <div id="side">
      <ul>
        <li><%= link_to 'Home', store_path %></li>
        <li><%= link_to 'News', static_page_path(4) %></li>
        <li><%= link_to 'Contact Us', static_page_path(3) %></li>
      </ul>
    </div>
    <div id="main">
      <%= yield %>
      
    </div>
  </div>
  <div id="footer">
    <%= render "layouts/footer" %>
  </div>
</body>
</html>

